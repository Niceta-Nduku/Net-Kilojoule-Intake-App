<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/mainToolbar"
        layout="@layout/toolbar">

    </include>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/entryView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainToolbar"
        android:background="@color/colorPrimaryDark"
        android:padding="4dp"
        android:scrollbars="vertical"/>

    <TextView
        android:id="@+id/Average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/entryView"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="24dp"
        android:text="Your Average:" />

    <TextView
        android:id="@+id/calcAvg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entryView"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@id/Average"
        android:layout_marginLeft="12dp"
        android:text="Calculated average" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/calculator_Launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="newEntry"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/ic_add_black_24dp" />

</RelativeLayout>